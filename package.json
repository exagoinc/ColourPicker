	"bugs": {
		"url": "https://github.com/volleio/ColourPicker/issues"
	},
	"homepage": "https://github.com/volleio/ColourPicker#readme",
	"devDependencies": {
		"concurrently": "^3.6.1",
		"less-watch-compiler": "^1.14.1",
		"tslint": "^5.20.1",
		"tslint-config-airbnb-base": "^0.1.0"
	},
	"dependencies": {
		"less": "^3.10.3",
		"typescript": "^3.7.2"
	},
	"publishConfig": {
